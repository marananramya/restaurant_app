<%= render 'layouts/header'%>
<div class="container">
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-12">
         <div class="panel">
          <% if results.present? %>
           <div class="panel-heading">
             <h3 class="text-center">Restaurant Details</h3>
           </div>
           <div class="panel-body">
            <% results. each do |r|%>
              <h3 class="text-center"><%= link_to r.name, restaurants_show_path(:id => r.id) %></h3>
            <% end %>
           </div>
          <% else %>
            <div class="panel-heading">
             <h3 class="text-center">No Results Found</h3>
           </div>
          <% end %> 
         </div>
      </div>
    </div>
  </div>
</div>
